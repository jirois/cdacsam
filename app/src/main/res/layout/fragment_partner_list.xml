<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.jinncyapps.authenapp.activities.elicitation.fragments.ClientNetworkViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs_partner_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.elicitation.fragments.PartnerListFragment">

        <ScrollView

            android:id="@+id/sc_partner_scr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.todkars.shimmer.ShimmerRecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:recyclerStatus="@{viewmodel.status}"
                app:shimmer_recycler_item_count="4"
                app:shimmer_recycler_layout="@layout/placeholder_recyclerview_layout"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@id/sc_partner_scr"
                app:layout_constraintEnd_toEndOf="@id/sc_partner_scr"
                app:layout_constraintStart_toStartOf="@id/sc_partner_scr"
                app:layout_constraintTop_toTopOf="@id/sc_partner_scr"
                tools:ignore="SpeakableTextPresentCheck" />
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>