<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_home_activity"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:navigationIcon="@drawable/ic_menu"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/home_inner_linear_layout_padding_start"
            android:paddingEnd="@dimen/home_inner_linear_layout_padding_end"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_33dp"
                android:background="@color/white"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/tv_welcome_text"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_welcome_text_size_34sp"
                    android:layout_marginEnd="5dp"
                    />
                <TextView
                    android:id="@+id/tv_welcome_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/teal_200"
                    android:textSize="@dimen/tv_welcome_text_size_34sp"
                    tools:text="Joe"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5dp"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/space_16dp"
                >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/sub_welcome_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18dp"
                    android:layout_marginEnd="@dimen/space_5dp"
                    />
                <ImageView
                    android:id="@+id/img_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_sunny_yellow"
                    android:contentDescription="@string/image_icon_description"
                    />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/home_title_text_margin_top_8dp"
                    android:layout_marginEnd="@dimen/space_60dp"
                    android:text="@string/tv_achievement_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_achievement" />

                <ImageView
                    android:id="@+id/btn_add_client"
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_height"
                    android:layout_marginTop="@dimen/home_icon_margin_top_16dp"
                    android:layout_marginStart="@dimen/home_icon_margin_start_8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_add_client_icon"
                    android:contentDescription="@string/image_icon_description"
                    />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_60dp"
                    android:layout_marginTop="@dimen/home_title_text_margin_top_8dp"
                    android:text="@string/tv_add_client_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_add_client" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/home_title_text_margin_top_8dp"
                    android:layout_marginEnd="@dimen/space_64dp"
                    android:text="@string/tv_elicitation_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_elicitation" />

                <ImageView
                    android:id="@+id/btn_elicitation"
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_height"
                    android:layout_marginTop="@dimen/home_icon_margin_top_16dp"
                    android:layout_marginEnd="@dimen/home_icon_margin_end_8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_elicitation_icon"
                    android:contentDescription="@string/image_icon_description"
                    />

                <ImageView
                    android:id="@+id/btn_facility"
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_height"
                    android:layout_marginStart="@dimen/home_icon_margin_start_8dp"
                    android:layout_marginTop="@dimen/home_icon_margin_top_16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                    app:srcCompat="@drawable/ic_facility_icon"
                    android:contentDescription="@string/image_icon_description"
                    />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_64dp"
                    android:layout_marginTop="@dimen/home_title_text_margin_top_8dp"
                    android:text="@string/tv_facility_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_facility" />

                <ImageView
                    android:id="@+id/btn_achievement"
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_height"
                    android:layout_marginTop="@dimen/home_icon_margin_top_16dp"
                    android:layout_marginEnd="@dimen/home_icon_margin_end_8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                    app:srcCompat="@drawable/ic_achievement_icon"
                    android:contentDescription="@string/image_icon_description"
                    />

                <ImageView
                    android:id="@+id/btn_search_icon"
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_height"
                    android:layout_marginStart="@dimen/home_icon_margin_start_8dp"
                    android:layout_marginTop="@dimen/home_icon_margin_top_16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    app:srcCompat="@drawable/ic_search_icon"
                    android:contentDescription="@string/image_icon_description"
                    />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/tv_search_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_search_icon" />

                <ImageView
                    android:id="@+id/btn_notification"
                    android:layout_width="@dimen/home_icon_width"
                    android:layout_height="@dimen/home_icon_height"
                    android:layout_marginTop="@dimen/home_icon_margin_top_16dp"
                    android:layout_marginEnd="@dimen/home_icon_margin_end_8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView10"
                    app:srcCompat="@drawable/ic_notification_icon"
                    android:contentDescription="@string/image_icon_description"
                    />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/home_title_text_margin_top_8dp"
                    android:layout_marginEnd="@dimen/space_60dp"
                    android:text="@string/tv_notification_icon_tittle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_notification" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>